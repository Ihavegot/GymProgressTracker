<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymTrackerApp.MVVM.Views.EditExercisePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource AppBackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!-- Header -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            BackgroundColor="{StaticResource AppHeaderBackgroundColorHeader}"
            StrokeThickness="0">
            <Grid>
                <!-- Title -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Edit Exercise"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Border>

        <!-- Split Line -->
        <BoxView
            Grid.Row="1"
            HeightRequest="1"
            Color="{StaticResource Primary}"
            HorizontalOptions="Fill" />

        <!-- Form Content -->
        <ScrollView Grid.Row="2" Padding="24">
            <VerticalStackLayout Spacing="24">
                
                <!-- Exercise Name -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"
                        CharacterSpacing="2"
                        Text="EXERCISE NAME"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Entry
                            x:Name="ExerciseNameEntry"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            Placeholder="e.g. Bench Press"
                            PlaceholderColor="{StaticResource TextSecondary}"
                            TextColor="White" />
                    </Border>
                </VerticalStackLayout>

                <!-- Reps/Time -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"
                        CharacterSpacing="1"
                        Text="REPETITIONS"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="RepsOrTimeEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Placeholder="e.g. 12"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text=" reps"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Weight -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"   
                        CharacterSpacing="1"
                        Text="WEIGHT"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="WeightEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Placeholder="e.g. 80"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text=" kg"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Cancel Button -->
        <Border
            Grid.Row="3"
            Margin="24,8"
            HeightRequest="56"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackClicked" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="#ef4444">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28" />
                </Border.StrokeShape>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Cancel"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>
        </Border>

        <!-- Save Button -->
        <Border
            Grid.Row="4"
            Margin="24,8,24,16"
            HeightRequest="56"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSaveClicked" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="{StaticResource Primary}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28" />
                </Border.StrokeShape>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Save Changes"
                    TextColor="{StaticResource AppBackgroundColor}"
                    VerticalOptions="Center" />
            </Border>
        </Border>
    </Grid>
</ContentPage>
