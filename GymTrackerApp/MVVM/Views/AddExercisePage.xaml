<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymTrackerApp.MVVM.Views.AddExercisePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource AppBackgroundColor}">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            BackgroundColor="{StaticResource AppHeaderBackgroundColorHeader}"
            StrokeThickness="0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Back Button -->
                <Border
                    Grid.Column="0"
                    Padding="8"
                    BackgroundColor="Transparent"
                    StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackClicked" />
                    </Border.GestureRecognizers>
                    <Label
                        FontSize="20"
                        Text="â†"
                        TextColor="{StaticResource Primary}"
                        VerticalOptions="Center" />
                </Border>

                <!-- Title -->
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Add Exercise"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Border>

        <!-- Form Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <VerticalStackLayout Spacing="24">
                <!-- Icon -->
                <Border
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    StrokeThickness="0"
                    WidthRequest="80">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40" />
                    </Border.StrokeShape>
                    <Border BackgroundColor="{StaticResource PrimaryWithAlpha10}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40" />
                        </Border.StrokeShape>
                        <Label
                            FontSize="40"
                            HorizontalOptions="Center"
                            Text="ðŸ‹"
                            VerticalOptions="Center" />
                    </Border>
                </Border>

                <!-- Exercise Name -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        CharacterSpacing="2"
                        Text="EXERCISE NAME"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Entry
                            x:Name="ExerciseNameEntry"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            Placeholder="e.g. Bench Press"
                            PlaceholderColor="{StaticResource TextSecondary}"
                            TextColor="White" />
                    </Border>
                </VerticalStackLayout>

                <!-- Reps/Time -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        CharacterSpacing="2"
                        Text="REPETITIONS"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="RepsOrTimeEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Keyboard="Numeric"
                                Placeholder="e.g. 12"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text="reps"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Weight -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        CharacterSpacing="2"
                        Text="WEIGHT"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="WeightEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Keyboard="Numeric"
                                Placeholder="e.g. 80"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text="kg"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Save Button -->
        <Border
            Grid.Row="2"
            Margin="24,16"
            HeightRequest="56"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Brush="{StaticResource Primary}"
                    Opacity="0.4"
                    Radius="20"
                    Offset="0,8" />
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSaveClicked" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="{StaticResource Primary}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28" />
                </Border.StrokeShape>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Save Exercise"
                    TextColor="{StaticResource AppBackgroundColor}"
                    VerticalOptions="Center" />
            </Border>
        </Border>
    </Grid>

</ContentPage>
