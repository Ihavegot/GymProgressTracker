<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymTrackerApp.MVVM.Views.AddExercisePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource AppBackgroundColor}"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            BackgroundColor="{StaticResource AppHeaderBackgroundColorHeader}"
            StrokeThickness="0">
            <Grid>
                <!--  Title  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Add Exercise"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Border>

        <!--  Split Line  -->
        <BoxView
            Grid.Row="1"
            HeightRequest="1"
            HorizontalOptions="Fill"
            Color="{StaticResource Primary}" />

        <!--  Form Content  -->
        <ScrollView Grid.Row="2" Padding="24">
            <VerticalStackLayout Spacing="24">
                <!--  Icon  -->
                <Border
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    StrokeThickness="0"
                    WidthRequest="80">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40" />
                    </Border.StrokeShape>
                    <Border BackgroundColor="{StaticResource PrimaryWithAlpha10}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40" />
                        </Border.StrokeShape>
                        <Label
                            FontSize="40"
                            HorizontalOptions="Center"
                            Text="ðŸ‹"
                            VerticalOptions="Center" />
                    </Border>
                </Border>

                <Picker
                    Title="Exercise type"
                    ItemsSource="{Binding ExerciseTypes}"
                    SelectedItem="{Binding SelectedExercise}" />

                <!--  Exercise Name  -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        CharacterSpacing="1"
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="EXERCISE NAME"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Entry
                            x:Name="ExerciseNameEntry"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            Placeholder="e.g. Bench Press"
                            PlaceholderColor="{StaticResource TextSecondary}"
                            TextColor="White" />
                    </Border>
                </VerticalStackLayout>

                <!--  Reps/Time  -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        CharacterSpacing="1"
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="REPETITIONS"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="RepsOrTimeEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Placeholder="e.g. 12"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text=" reps"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!--  Weight  -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        CharacterSpacing="1"
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="WEIGHT"
                        TextColor="{StaticResource Primary}" />
                    <Border
                        Padding="16"
                        BackgroundColor="{StaticResource AppItemBackgroundColor}"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Stroke>
                            <SolidColorBrush Color="{StaticResource BorderColor}" />
                        </Border.Stroke>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry
                                x:Name="WeightEntry"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Placeholder="e.g. 80"
                                PlaceholderColor="{StaticResource TextSecondary}"
                                TextColor="White" />
                            <Label
                                Grid.Column="1"
                                FontSize="14"
                                Text=" kg"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!--  Cancel Button  -->
        <Border
            Grid.Row="3"
            Margin="24,8"
            HeightRequest="56"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackClicked" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="#ef4444">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28" />
                </Border.StrokeShape>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Cancel"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>
        </Border>

        <!--  Save Button  -->
        <Border
            Grid.Row="4"
            Margin="24,8,24,16"
            HeightRequest="56"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSaveClicked" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="{StaticResource Primary}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28" />
                </Border.StrokeShape>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Save Exercise"
                    TextColor="{StaticResource AppBackgroundColor}"
                    VerticalOptions="Center" />
            </Border>
        </Border>
    </Grid>

</ContentPage>
