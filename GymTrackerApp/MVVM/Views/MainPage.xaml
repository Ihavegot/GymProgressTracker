<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymTrackerApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.BackgroundColor="{StaticResource AppHeaderBackgroundColorHeader}">

    <ScrollView BackgroundColor="{StaticResource AppBackgroundColor}">
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label
                FontSize="24"
                HorizontalOptions="Start"
                Text="Saved sessions" />

            <CollectionView
                x:Name="ProductsView"
                BackgroundColor="{StaticResource AppItemBackgroundColor}"
                ItemsSource="{Binding Exercise}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    FontSize="18"
                                    Text="{Binding ExerciseName}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    BackgroundColor="LightGreen"
                                    Text="{Binding RepsOrTime, StringFormat='Reps or time: {0:C}'}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    BackgroundColor="LightCoral"
                                    Text="{Binding Weight, StringFormat='Weight: {0:C}'}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    BackgroundColor="Lime"
                                    Clicked="DeleteData"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="50"
                                    HeightRequest="65"
                                    HorizontalOptions="End"
                                    Shadow="Lime 0.1 0.1"
                                    Text="X"
                                    TextColor="Black"
                                    WidthRequest="65" />
                            </Grid>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Clicked="OnNavigateClicked" Text="Go to Second Page" />

            <!--VerticalStackLayout>
                <Entry x:Name="exerciseNameEntry" Placeholder="Exercise Name" />
                <Entry x:Name="repsOrTimeEntry" Placeholder="Reps or Time" />
                <Entry x:Name="weightEntry" Placeholder="Weight" />
            </VerticalStackLayout>

            <Button
                Clicked="SaveData"
                HorizontalOptions="Center"
                Text="Add Product" /-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
